{
  "manifest_version": 3,
  "name": "Quick Check AEM",
  "version": "1.0",
  "description": "Chrome Extension for AEM functionalities",
  "permissions": ["storage", "scripting", "activeTab"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "32": "icon32.png",
      "48": "icon64.png",
      "128": "icon128.png"
    }
  },
  "browser_action": {
    "default_icon": {                   
      "16": "icon16.png",
      "32": "icon32.png",
      "64": "icon64.png",
      "128": "icon128.png"        
    }
  },
  "host_permissions": ["<all_urls>", "*://*/*"]
}